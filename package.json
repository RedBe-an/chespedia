{
  "name": "chespedia",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "concurrently \"next dev\" \"npm run dev:rust\"",
    "dev:rust": "vercel dev --listen 3001",
    "build": "npm run build:rust && next build",
    "build:rust": "cargo build --release",
    "build:all": "concurrently \"npm run build:rust\" \"next build\"",
    "start": "next start",
    "start:production": "concurrently \"npm run start:rust\" \"next start\"",
    "start:rust": "cargo run --release",
    "lint": "next lint",
    "clean": "rm -rf .next && rm -rf target",
    "clean:build": "npm run clean && npm run build",
    "preview": "npm run build && npm start",
    "type-check": "tsc --noEmit",
    "format": "prettier --write .",
    "ci": "npm run type-check && npm run lint && npm run build"
  },
  "dependencies": {
    "@mdx-js/react": "^3.1.0",
    "@radix-ui/react-slot": "^1.2.3",
    "@tailwindcss/postcss": "^4.1.11",
    "@tailwindcss/typography": "^0.5.16",
    "@tailwindcss/vite": "^4.1.11",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.533.0",
    "next": "^15.4.5",
    "next-mdx-remote": "^5.0.0",
    "next-themes": "^0.4.6",
    "postcss": "^8.5.6",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "tailwind-merge": "^3.3.1",
    "tailwindcss": "^4.1.11",
    "tw-animate-css": "^1.3.6"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "@types/node": "^22.17.0",
    "@types/react": "^19.1.9",
    "@types/react-dom": "^19.1.7",
    "concurrently": "^9.2.0",
    "eslint": "^9.32.0",
    "eslint-config-next": "^15.4.5",
    "prettier": "^3.3.3",
    "typescript": "^5.8.3",
    "vercel": "^44.6.4"
  },
  "engines": {
    "node": ">=18.17.0"
  }
}
